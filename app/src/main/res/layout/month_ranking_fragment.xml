                        android:id="@+id/month_ranking_tv_jifen03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65535"
                        android:textColor="#1EBAF3"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef"/>
            <com.longxiang.woniuke.myview.MyListView
                android:id="@+id/month_ranking_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"></com.longxiang.woniuke.myview.MyListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>