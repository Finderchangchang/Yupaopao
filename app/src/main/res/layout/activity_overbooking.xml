<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/Rl_all1"
    tools:context=".activity.OverbookingActivity">

    <include
        android:id="@+id/sub_title_overbooking1"
        layout="@layout/item_titleevery"/>
    <RelativeLayout
        android:onClick="onClick"
        android:id="@+id/layout_type_overbooking1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="品类"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_pinlei1"
            android:src="@mipmap/dayuhao"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_type_overbooking1"
            android:text="选择品类"
            android:textColor="#ccc"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_pinlei1"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:onClick="onClick"
        android:id="@+id/layout_gride_overbooking1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="等级"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_dengji1"
            android:src="@mipmap/dayuhao"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_gride_overbooking1"
            android:text="选择等级"
            android:textColor="#ccc"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_dengji1"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="性别"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:id="@+id/rg_overbooking1"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb1_overbooking1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/all_sex"
                android:textSize="0sp"
                android:checked="true"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>
            <RadioButton
                android:id="@+id/rb2_overbooking1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/man_sex"
                android:textSize="0sp"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>
            <RadioButton
                android:id="@+id/rb3_overbooking1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/woman_sex"
                android:textSize="0sp"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>
        </RadioGroup>
    </RelativeLayout>
    <TextView
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:id="@+id/layout_time_overbooking1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="时间"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_time1"
            android:src="@mipmap/dayuhao"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time_overbooking1"
            android:text="选择时间"
            android:textColor="#ccc"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_time1"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!--<Button-->
        <!--android:text="选择"-->
        <!--android:onClick="onClick"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="发布订单"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#1EBAF3"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_overbooking1"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/sub_overbooking1"
            layout="@layout/item_dialog"/>
    </LinearLayout>

    </RelativeLayout>


</LinearLayout>
