    <RelativeLayout
        android:id="@+id/message_rl01"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/message_iv01"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/xitongxiaoxi"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/message_chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="聊天消息"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/message_iv01"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/message_chat_count"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/red_point_bg"
            android:text=""
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_toLeftOf="@+id/message_chat_title"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            />
    </RelativeLayout>
