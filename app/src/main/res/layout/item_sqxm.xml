<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:background="#ffffff">
        <com.longxiang.woniuke.myview.RoundImageViewByXfermode
            android:id="@+id/item_sqxm_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:background="@drawable/roundbutton"/>
            <TextView
                android:id="@+id/item_sqxm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="LOL"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/item_sqxm_iv"
                android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/sqxm_iv_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_a"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/sqxm_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff1111"
            android:text="通过"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/sqxm_iv_none"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>