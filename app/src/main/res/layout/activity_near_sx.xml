<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longxiang.woniuke.activity.NearSxActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#1EBAF3"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/nearsx_iv_back"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_back_glay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/nearsx_title"
                android:text="筛选"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/nearsx_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <RadioGroup
                android:id="@+id/nearsx_rg01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/nearsx_rb01"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="全部"
                    android:checked="true"
                    android:gravity="center"
                    android:background="@drawable/intrest_selector"
                    android:textColor="@drawable/grideview_text_selector"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <RadioButton
                    android:id="@+id/nearsx_rb02"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="男"
                    android:background="@drawable/intrest_selector"
                    android:textColor="@drawable/grideview_text_selector"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    />
                <RadioButton
                    android:id="@+id/nearsx_rb03"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="女"
                    android:background="@drawable/intrest_selector"
                    android:textColor="@drawable/grideview_text_selector"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    />
            </RadioGroup>
        </LinearLayout>
        <TextView
            android:id="@+id/nearsx_appeartime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出现时间"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <RadioGroup
                android:id="@+id/nearsx_rg02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/nearsx_rb04"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="3天"
                    android:checked="true"
                    android:gravity="center"
                    android:background="@drawable/intrest_selector"
                    android:textColor="@drawable/grideview_text_selector"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <RadioButton
                    android:id="@+id/nearsx_rb05"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="1天"
                    android:gravity="center"
                    android:background="@drawable/intrest_selector"
                    android:textColor="@drawable/grideview_text_selector"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <RadioButton
                    android:id="@+id/nearsx_rb06"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="15分钟"
                    android:background="@drawable/intrest_selector"
                    android:textColor="@drawable/grideview_text_selector"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/nearsx_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/conner_bg"
        android:text="确认筛选"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
