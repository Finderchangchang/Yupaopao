<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/dashang_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打赏金额"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f8f8f8"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <Button
                android:id="@+id/dashang_bt01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dashang_selector"
                android:textColor="@drawable/money_text_selector"
                android:text="1元"
                android:layout_margin="10dp"
                />
            <Button
                android:id="@+id/dashang_bt02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dashang_selector"
                android:textColor="@drawable/money_text_selector"
                android:text="5元"
                android:layout_margin="10dp"
                />
            <Button
                android:id="@+id/dashang_bt03"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dashang_selector"
                android:textColor="@drawable/money_text_selector"
                android:text="10元"
                android:layout_margin="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <Button
                android:id="@+id/dashang_bt04"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dashang_selector"
                android:textColor="@drawable/money_text_selector"
                android:text="20元"
                android:layout_margin="10dp"
                />
            <Button
                android:id="@+id/dashang_bt05"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dashang_selector"
                android:textColor="@drawable/money_text_selector"
                android:text="50元"
                android:layout_margin="10dp"
                />
            <Button
                android:id="@+id/dashang_bt06"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dashang_selector"
                android:textColor="@drawable/money_text_selector"
                android:text="99元"
                android:layout_margin="10dp"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/dashang_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextbackground"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:imeOptions="actionDone"
            android:hint="手动输入打赏金额"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f8f8f8"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/dashang_btnconfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/conner_login_bg"
            android:text="赏了"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</LinearLayout>