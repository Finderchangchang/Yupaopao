<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/iv_lv_home"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/touxiang"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="70dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_name_lv_home"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:text="昵称"
                android:textSize="13sp"
                android:textColor="#555555"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_distance_lv_home"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:textSize="13sp"
                android:layout_toLeftOf="@+id/tv_time_lv_home"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_time_lv_home"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:text="7小时前"
                android:textColor="#555555"
                android:textSize="13sp"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_constellation_lv_home"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:text="星座"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_age_lv_home"
                android:layout_toRightOf="@+id/tv_constellation_lv_home"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textColor="#fff"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_gravity="right"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tv_start_lv_home"
                android:src="@mipmap/xingxing"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/tv_start_lv_home"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:text="5.0"
                android:textColor="#555555"
                android:textSize="13sp"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/ll_lv_home"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_getoffer_lv_home"
                android:gravity="center_vertical">

                <com.longxiang.woniuke.myview.RoundImageViewByXfermode
                    android:id="@+id/iv01_item_home"
                    android:layout_width="17dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>
                <com.longxiang.woniuke.myview.RoundImageViewByXfermode
                    android:id="@+id/iv02_item_home"
                    android:layout_width="17dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    />
                <com.longxiang.woniuke.myview.RoundImageViewByXfermode
                    android:id="@+id/iv03_item_home"
                    android:layout_width="17dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>
                <com.longxiang.woniuke.myview.RoundImageViewByXfermode
                    android:id="@+id/iv04_item_home"
                    android:layout_marginRight="2dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>
                <com.longxiang.woniuke.myview.RoundImageViewByXfermode
                    android:id="@+id/iv05_item_home"
                    android:layout_marginRight="2dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>
                <com.longxiang.woniuke.myview.RoundImageViewByXfermode
                    android:id="@+id/iv06_item_home"
                    android:layout_marginRight="2dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>
                <com.longxiang.woniuke.myview.RoundImageViewByXfermode
                    android:id="@+id/iv07_item_home"
                    android:layout_marginRight="2dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"/>
                <com.longxiang.woniuke.myview.RoundImageViewByXfermode
                    android:id="@+id/iv08_item_home"
                    android:layout_marginRight="2dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_getoffer_lv_home"
                android:layout_alignParentRight="true"
                android:layout_width="70dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical|right"
                android:layout_gravity="right"
                android:text="接单173"
                android:textSize="13sp"
                android:textColor="#555555"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>