<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/price_operation_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/edittextbackground"
        android:alpha="0.8"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/price_operation_rgprice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/price_operation_jiage01"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:background="@drawable/price_zhekou_selector"
                        android:textColor="@drawable/grideview_text_selector"
                        android:text="25"
                        android:gravity="center"
                        android:checked="true"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="invisible"/>
                    <RadioButton
                        android:id="@+id/price_operation_jiage02"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:background="@drawable/price_zhekou_selector"
                        android:textColor="@drawable/grideview_text_selector"
                        android:text="30"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="invisible"/>
                    <RadioButton
                        android:id="@+id/price_operation_jiage03"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:background="@drawable/price_zhekou_selector"
                        android:textColor="@drawable/grideview_text_selector"
                        android:text="35"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="invisible"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:background="#ffffff">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可选折扣"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/price_operation_rgzhekou"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/price_operation_wuzhekou"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:background="@drawable/price_zhekou_selector"
                        android:textColor="@drawable/grideview_text_selector"
                        android:text="无折扣"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginLeft="10dp"/>
                    <RadioButton
                        android:id="@+id/price_operation_wuzhe"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:background="@drawable/price_zhekou_selector"
                        android:textColor="@drawable/grideview_text_selector"
                        android:text="8折"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginLeft="10dp"/>
                    <RadioButton
                        android:id="@+id/price_operation_bazhe"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:background="@drawable/price_zhekou_selector"
                        android:textColor="@drawable/grideview_text_selector"
                        android:text="5折"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginLeft="10dp"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:orientation="horizontal"
               android:background="#efefef">
               <TextView
                   android:id="@+id/price_operation_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="实际单价"
                   android:textSize="12sp"
                   android:textColor="#000000"
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center_vertical"
                   />
               <TextView
                   android:id="@+id/price_operation_money"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="25元"
                   android:gravity="center_vertical"
                   android:textSize="20sp"
                   android:textColor="#31C0F4"
                   android:background="#efefef"
                   android:layout_gravity="center_vertical"
                   />
               <TextView
                   android:id="@+id/price_operation_zhekou"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="(已选无折扣)"
                   android:gravity="center_vertical"
                   android:textSize="12sp"
                   android:textColor="#000000"
                   android:background="#efefef"
                   android:layout_gravity="center_vertical"
                   />
           </LinearLayout>
            <Button
                android:id="@+id/price_operation_confirm"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1.5"
                android:background="#31C0F4"
                android:textColor="#ffffff"
                android:text="确认"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>