        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_title_message"
            android:text="消息列表"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
