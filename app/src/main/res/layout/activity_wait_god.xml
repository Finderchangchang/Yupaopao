<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.longxiang.woniuke.activity.WaitGodActivity">
    <RelativeLayout
        android:background="#1EBAF3"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <!--<ImageView-->
            <!--android:id="@+id/wait_god_iv_back"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:src="@mipmap/ic_back_glay"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent" />-->
        <TextView
            android:text="等待大神"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/woniu"
        >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:layout_gravity="center_horizontal"
           android:gravity="center"
           android:layout_marginTop="50dp"
           android:orientation="horizontal"
           android:background="#fff">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="已将您的订单推给"
               android:textColor="#000"
               android:layout_marginLeft="10dp"
               />
           <TextView
               android:id="@+id/wait_god_tv_num"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0"
               android:textSize="20sp"
               android:textColor="#ff1111"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="位大神,请稍后..."
               android:textColor="#000"
               android:layout_marginRight="10dp"/>
       </LinearLayout>
