<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.longxiang.woniuke.activity.ProFeedbackActivity">
    <RelativeLayout
    android:id="@+id/feedback_rl_title"
    android:background="#1EBAF3"
    android:layout_width="match_parent"
    android:layout_height="45dp">
    <ImageView
        android:id="@+id/feedback_iv_back"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_back_glay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/feedback_tv_title_name"
        android:text="产品反馈"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <EditText
        android:id="@+id/feedback_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@null"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="请输入产品反馈意见"
        android:textSize="14sp"
        android:lines="8"
        android:textColor="#000"
        android:gravity="top"
        android:padding="5dp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <ImageView
            android:id="@+id/feedback_iv01"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@mipmap/jiahao80"
            android:scaleType="fitXY"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/feedback_iv02"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@mipmap/jiahao80"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/feedback_iv03"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@mipmap/jiahao80"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/feedback_iv04"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@mipmap/jiahao80"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:visibility="invisible"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击可以添加图片,最多4张"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <Button
        android:id="@+id/feedback_btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/conner_bg"
        android:layout_marginTop="30dp"
        android:text="提交"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
</LinearLayout>
