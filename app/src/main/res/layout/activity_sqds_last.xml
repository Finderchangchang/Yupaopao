    </LinearLayout>
    <Button
        android:id="@+id/sqdslast_btnedit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sqdslast_ll"
        android:text="修改资料"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:background="@drawable/conner_sqds_btnedit_bg"
        android:visibility="gone"/>
    <Button
        android:id="@+id/sqdslast_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1EBAF3"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:text=""
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/sqdslast_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sqdslast_btnedit"
        android:text="仅用于修改封面图片和说明"
        android:textSize="12sp"
