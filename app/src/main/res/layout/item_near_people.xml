<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.longxiang.woniuke.myview.RoundAngleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/near_item_icon"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        app:roundWidth="5dp"
        app:roundHeight="5dp"
        android:src="@mipmap/touxiang"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/near_item_name"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:text="昵称"
                android:textSize="14sp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/near_item_tv_distance"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/near_item_shuxian"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="0.00km"/>
            <TextView
                android:id="@+id/near_item_shuxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/near_item_tv_time"/>
            <TextView
                android:id="@+id/near_item_tv_time"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:text="7小时前"
                android:textSize="13sp"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/near_item_age"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:text="年龄"
                android:textSize="12sp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:drawableLeft="@drawable/sex_selector"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/ll_lv_near"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/near_item_age"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv01_item_near"
                    android:layout_width="17dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    />
                <ImageView
                    android:id="@+id/iv02_item_near"
                    android:layout_width="17dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    />
                <ImageView
                    android:id="@+id/iv03_item_near"
                    android:layout_width="17dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/iv04_item_near"
                    android:layout_marginRight="2dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/iv05_item_near"
                    android:layout_marginRight="2dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/iv06_item_near"
                    android:layout_marginRight="2dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/iv07_item_near"
                    android:layout_marginRight="2dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/iv08_item_near"
                    android:layout_marginRight="2dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/near_item_tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textSize="13sp"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>