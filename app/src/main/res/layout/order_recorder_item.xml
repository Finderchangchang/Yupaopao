<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:background="#ffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f8f8f8"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="30dp">
           <TextView
               android:id="@+id/order_record_item_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="已完成"
               android:lines="1"
               android:textColor="#000"
               android:layout_marginLeft="10dp"
               android:layout_centerVertical="true"/>
           <RatingBar
               android:id="@+id/order_record_item_ratingbar"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/myRatingBarsmall"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:isIndicator="true"
               android:numStars="5"
               android:layout_marginRight="10dp"/>
       </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f8f8f8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <com.longxiang.woniuke.myview.RoundAngleImageView
                android:id="@+id/order_record_item_pic"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.longxiang.woniuke.myview.RoundImageViewByXfermode
                        android:id="@+id/order_record_item_ivtype"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:scaleType="fitXY"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        ></com.longxiang.woniuke.myview.RoundImageViewByXfermode>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:id="@+id/order_record_item_tvdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08月02日"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/order_record_item_tvcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数量:1"
                        android:layout_toRightOf="@+id/order_record_item_tvdate"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/order_record_item_moneylayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:background="#ffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f8f8f8"/>
        <TextView
            android:id="@+id/order_record_item_money"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="111"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f8f8f8"/>
    </LinearLayout>
</LinearLayout>