<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.longxiang.woniuke.activity.ConversationActivity">
    <RelativeLayout
        android:id="@+id/conversation_rl_title"
        android:background="#1EBAF3"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/conversation_iv_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back_glay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/conversation_tv_title_name"
            android:text="麻辣鸡丝"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/conversation_iv_detailmsg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/popjiahaoyouyou"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/conversation_ll_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <com.longxiang.woniuke.myview.RoundImageViewByXfermode
            android:id="@+id/conversation_iv_typeimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/conversation_tv_typename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="技能名字"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/conversation_tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/conner_tequan_bg"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="#DCA54D"
                    android:text="高级"
                    android:layout_marginLeft="8dp"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/conversation_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单价:199元"
                    android:textSize="14sp"
                    android:textColor="#ff1111"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/conversation_btn_makeorder"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="立即下单"
            android:textSize="13sp"
            android:textColor="#fff"
            android:background="@drawable/conner_login_bg"/>
    </LinearLayout>
    <fragment
        android:id="@+id/conversation"
        android:name="io.rong.imkit.fragment.ConversationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
