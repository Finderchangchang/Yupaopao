<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.longxiang.woniuke.activity.DynamicDetailActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:id="@+id/dynamic_detail_rl_title"
        android:background="#1EBAF3"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/dynamic_detail_tv_back"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/dynamic_detail_tvtitle"
            android:text="动态详情"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dynamic_detail_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="删除"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dynamic_detail_rl_title"
        android:layout_above="@+id/dynamic_detail_bottom_menu"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="550dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/dynamic_detail_layout"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:padding="2dp"
                        >
                        <com.longxiang.woniuke.myview.RoundAngleImageView
                            android:id="@+id/dynamic_detail_icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:scaleType="fitXY"
                            app:roundHeight="3dp"
                            app:roundWidth="3dp"/>
                        <TextView
                            android:id="@+id/dynamic_detail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/dynamic_detail_icon"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/dynamic_detail_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="12sp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:drawableLeft="@drawable/sex_selector"
                            android:gravity="center"
                            android:text="男"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/dynamic_detail_icon"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="15dp"/>
                        <LinearLayout
                            android:id="@+id/dynamic_detail_ll"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/dynamic_detail_sex"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="15dp"
                            >

                            <ImageView
                                android:id="@+id/iv01_dynamic_detail"
                                android:layout_width="16dp"
                                android:layout_marginRight="2dp"
                                android:layout_height="16dp"
                                android:scaleType="fitXY"
                                android:visibility="invisible"
                                />
                            <ImageView
                                android:id="@+id/iv02_dynamic_detail"
                                android:layout_width="16dp"
                                android:layout_marginRight="2dp"
                                android:layout_height="16dp"
                                android:scaleType="fitXY"
                                android:visibility="invisible"
                                />
                            <ImageView
                                android:id="@+id/iv03_dynamic_detail"
                                android:layout_width="16dp"
                                android:layout_marginRight="2dp"
                                android:layout_height="16dp"
                                android:scaleType="fitXY"
                                android:visibility="invisible"/>
                            <ImageView
                                android:id="@+id/iv04_dynamic_detail"
                                android:layout_marginRight="2dp"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:scaleType="fitXY"
                                android:visibility="invisible"/>
                            <ImageView
                                android:id="@+id/iv05_dynamic_detail"
                                android:layout_marginRight="2dp"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:scaleType="fitXY"
                                android:visibility="invisible"/>
                            <ImageView
                                android:id="@+id/iv06_dynamic_detail"
                                android:layout_marginRight="2dp"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:scaleType="fitXY"
                                android:visibility="invisible"/>
                            <ImageView
                                android:id="@+id/iv07_dynamic_detail"
                                android:layout_marginRight="2dp"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:scaleType="fitXY"
                                android:visibility="invisible"/>
                            <ImageView
                                android:id="@+id/iv08_dynamic_detail"
                                android:layout_marginRight="2dp"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:scaleType="fitXY"
                                android:visibility="invisible"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/dynamic_detail_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="06-20"
                            android:textSize="13sp"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:id="@+id/dynamic_detail_shuxian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:layout_marginTop="10dp"
                            android:textSize="13sp"
                            android:layout_toLeftOf="@+id/dynamic_detail_time"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"/>
                        <TextView
                            android:id="@+id/dynamic_detail_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="205.5km"
                            android:textSize="13sp"
                            android:layout_toLeftOf="@+id/dynamic_detail_shuxian"
                            android:layout_marginTop="10dp"
                            />
                        <Button
                            android:id="@+id/dynamic_detail_gz"
                            android:layout_width="50dp"
                            android:layout_height="23dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/conner_dynamic_gz_bg"
                            android:text="关注"
                            android:textSize="13sp"
                            android:textColor="#31C0F4"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eee"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/dynamic_detail_tvcontent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <com.longxiang.woniuke.myview.RoundAngleImageView
                        android:id="@+id/dynamic_detail_pic"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:roundHeight="5dp"
                        app:roundWidth="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <ImageView
                            android:id="@+id/dynamic_detail_ckzan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zanguoderen"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="110dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/dynamic_detail_dashang"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="打赏"
                            android:padding="5dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:drawableLeft="@mipmap/qiandai"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/conner_dynamic_bg"
                            />
                        <ImageView
                            android:id="@+id/dynamic_detail_ckdashang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zanguoderen"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"/>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/dynamic_detail_rl"
                    android:layout_width="100dp"
                    android:layout_height="500dp">
                    <TextView
                        android:id="@+id/dynamic_detail_zan"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="赞"
                        android:padding="5dp"
                        android:gravity="center"
                        android:drawableLeft="@mipmap/xinshoucang"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/conner_dynamic_bg"
                        android:layout_marginBottom="5dp"/>
                </RelativeLayout>
                <com.longxiang.woniuke.utils.FavorLayout
                    android:id="@+id/dynamic_detail_favorlayout"
                    android:layout_width="100dp"
                    android:alpha="1"
                    android:layout_height="500dp"></com.longxiang.woniuke.utils.FavorLayout>
            </RelativeLayout>
            <com.longxiang.woniuke.myview.MyListView
                android:id="@+id/dynamic_detail_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.longxiang.woniuke.myview.MyListView>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eee"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>
    <LinearLayout
        android:id="@+id/dynamic_detail_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="#f8f8f8">
        <EditText
            android:id="@+id/dynamic_detail_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:textCursorDrawable="@null"
            android:background="@mipmap/baikuang"
            android:paddingLeft="5dp"/>
        <Button
            android:id="@+id/dynamic_detail_send"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/conner_intrest_bg"
            android:textColor="#fff"
            android:text="发送"/>
    </LinearLayout>
</RelativeLayout>
