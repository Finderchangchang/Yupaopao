<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longxiang.woniuke.activity.JuBaoActivity">
    <RelativeLayout
        android:id="@+id/jubao_rl_title"
        android:background="#1EBAF3"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/jubao_iv_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back_glay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/jubao_tv_title_name"
            android:text="举报"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:scrollbars="none"
       android:layout_below="@id/jubao_rl_title">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="35dp"
               android:gravity="center_vertical"
               android:background="#efefef">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="举报 "
                   android:layout_marginLeft="10dp"
                   />
               <TextView
                   android:id="@+id/jubao_tv_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="名字"
                   android:textColor="#000"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=" 原因"/>
           </LinearLayout>
           <!--<com.longxiang.woniuke.myview.MyListView-->
               <!--android:id="@+id/jubao_listview"-->
               <!--android:layout_width="match_parent"-->
               <!--android:layout_height="wrap_content"-->
               <!--android:scrollbars="none"></com.longxiang.woniuke.myview.MyListView>-->
           <EditText
               android:id="@+id/jubao_et"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textCursorDrawable="@null"
               android:background="#fff"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:hint="输入举报原因:"
               android:textSize="14sp"
               android:lines="8"
               android:gravity="top"
               android:padding="5dp"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp">
               <ImageView
                   android:id="@+id/jubao_iv01"
                   android:layout_width="90dp"
                   android:layout_height="90dp"
                   android:layout_weight="1"
                   android:src="@mipmap/jiahao80"
                   android:scaleType="fitXY"
                   android:padding="5dp"
                   />
               <ImageView
                   android:id="@+id/jubao_iv02"
                   android:layout_width="90dp"
                   android:layout_height="90dp"
                   android:layout_weight="1"
                   android:src="@mipmap/jiahao80"
                   android:scaleType="fitXY"
                   android:padding="5dp"
                   android:visibility="invisible"
                   />
               <ImageView
                   android:id="@+id/jubao_iv03"
                   android:layout_width="90dp"
                   android:layout_height="90dp"
                   android:layout_weight="1"
                   android:src="@mipmap/jiahao80"
                   android:scaleType="fitXY"
                   android:padding="5dp"
                   android:visibility="invisible"
                   />
               <ImageView
                   android:id="@+id/jubao_iv04"
                   android:layout_width="90dp"
                   android:layout_height="90dp"
                   android:layout_weight="1"
                   android:src="@mipmap/jiahao80"
                   android:scaleType="fitXY"
                   android:padding="5dp"
                   android:visibility="invisible"
                   />
           </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="点击可以添加图片,最多4张"
               android:textSize="12sp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"/>
       </LinearLayout>
   </ScrollView>
    <Button
        android:id="@+id/jubao_btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1EBAF3"
        android:text="提交"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
